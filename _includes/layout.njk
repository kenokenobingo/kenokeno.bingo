<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="author" content="K E N O ">
    <meta name="description" content="Art: publishing, algorithms, infrastructure.">
    <meta name="keywords" content="art, media art, publishing, algorithms, infrastructure, code, printing">

    <title>{{ metadata.title }}</title>

    <link rel="stylesheet" href="{{ '/css/main.css' | url }}" />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">

    <!-- Matomo -->
    <script type="text/javascript">
      var _paq = window._paq || [];
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u = '//data.kenokeno.bingo/';
        _paq.push(['setTrackerUrl', u + 'matomo.php']);
        _paq.push(['setSiteId', '1']);
        var d = document,
          g = d.createElement('script'),
          s = d.getElementsByTagName('script')[0];
        g.type = 'text/javascript';
        g.async = true;
        g.defer = true;
        g.src = u + 'matomo.js';
        s.parentNode.insertBefore(g, s);
      })();
    </script>
    <!-- End Matomo Code -->
  </head>
  <body>
    <header>
      <div id="title">
        <a href="/"><h1>{{ metadata.title }}</h1></a>
      </div>
      <div id="meta">
        {% for meta in collections.meta | reverse %}
        <a href="{{ meta.url }}"><button>{{ meta.data.title }}</button></a>
        {% endfor %}
      </div>
    </header>
    <main>
      <div id="main">
        {{ content | safe }}
      </div>
    </main>
  </body>
</html>
